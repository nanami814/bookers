<div>
  <%= flash[:notice] %>
</div>
<body>
  <h1 class="titleindex">Books</h1>
  <table>
    <thead>
      <tr class="list">
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
   </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr class="textindex">
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td class="linkindex">
            <%= link_to 'Show',book_path(book) %>
            <%= link_to 'Edit',edit_book_path(book) %>
            <%= link_to 'Destroy',book_path(book), method: :delete, data: { confirm: 'Are you sure?' }%></td>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</body>
<body>
  <h2 class="titleindex2">New book</h2>
  <%= form_with model:@book, method: :post do |f| %>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
    <div class="box">
      <label for="book_title">Title</label>
      <p><%= f.text_field :title %></p>
    </div>
    <div class="box">
      <label for="book_body">Body</label>
      <p><%= f.text_area :body %></p>
    </div>
    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
  
</body>